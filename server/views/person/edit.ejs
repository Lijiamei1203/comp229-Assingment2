<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1> edit  Business Contacts </h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField" 
                    name="name" 
                    value="<%= person.name %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="authorTextField">Number</label>
                    <input type="text" class="form-control"
                    id="authorTextField" 
                    name="author" 
                    value="<%= person.author %>"
                    required>
                </div>
 
                <div class="form-group">
                    <label for="publishedTextField">email</label>
                    <input type="text" class="form-control"
                    id="publishedTextField" 
                    name="published" 
                    value="<%= person.published %>"
                    required>
                </div>
               

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/person-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>


